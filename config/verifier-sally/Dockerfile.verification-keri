FROM python:3.12-slim

WORKDIR /app

# Install required packages for KERI verification
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn==0.24.0 \
    httpx==0.25.0

# Copy the KERI-enabled verification service
COPY verification_service_keri.py /app/verification_service.py

# Expose port
EXPOSE 9723

# Run the service
CMD ["python3", "/app/verification_service.py"]
